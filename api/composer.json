{
    "name": "vasconcelos-giovanni/product-manager",
    "description": "Product management system with OOP principles for Scandiweb test assignment.",
    "type": "project",
    "require": {
        "php": ">=7.4.33"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "public\\": "public/",
            "routes\\": "routes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "app/Helpers/helpers.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "phpcompatibility/php-compatibility": "^10.0.0@dev"
    }
}